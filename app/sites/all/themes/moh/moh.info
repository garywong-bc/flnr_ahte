name = Province of BC Drupal Theme
description = A custom Drupal 7 theme based off the 960 Grid System.
screenshot = images/screenshot.png
core = 7.x
engine = phptemplate

; Stylesheets. Anything within the "framework" folder will be placed before all others.
stylesheets[all][] = css/framework/reset.css
